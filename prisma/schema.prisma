// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model MenuItem {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  category    String?     
  status      String?
  price       Float
  imageUrl    String?
  isPopular   Boolean @default(false)
  createdAt   DateTime @default(now())
}

model BlogPost {
  id          Int      @id @default(autoincrement())
  title       String
  fullContent String?
  imageUrl    String?
  createdAt   DateTime @default(now())
}


model Reservation {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?
  phone     String?
  message   String?
  date      DateTime
  time      String   @default("00:00")
  guests    Int
  status    String   @default("Pending")
  createdAt DateTime @default(now())
}


model Review {
  id        Int      @id @default(autoincrement())
  name      String
  rating    Float
  text      String
  img       String   // ‚Üê profile image
  date      String
  createdAt DateTime @default(now())
}

model Contact {
  id         Int      @id @default(autoincrement())
  first_name String
  last_name  String
  email      String
  phone      String?
  subject    String?
  message    String
  createdAt  DateTime @default(now())
}


